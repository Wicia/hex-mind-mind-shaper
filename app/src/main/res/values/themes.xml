<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for light mode -->
    <style name="Theme.MindShaper" parent="Theme.Material3.Light">

        <!-- Primary color -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/_orange_medium</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/app_secondary</item>
        <item name="colorOnSecondary">@color/_white</item>
        <item name="colorSecondaryContainer">@color/_orange_light</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/app_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/_orange_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:windowBackground">@color/app_background</item>

        <!-- Error color -->
        <item name="colorError">@color/validation_error</item>
        <item name="colorOnError">@color/validation_error</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/app_primary</item>
        <item name="android:navigationBarColor">@color/app_primary</item>

        <!-- Force android to always load common theme (no dark/light) -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:forceDarkAllowed">false</item>

    </style>

    <!-- Theme for carousel activity without action bar -->
    <style name="Theme.MindShaper.NoActionBar" parent="Theme.MindShaper">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Theme for capture activity with immersive feel -->
    <style name="Theme.MindShaper.Capture" parent="Theme.MindShaper">
        <item name="android:windowBackground">@color/_orange_light</item>
        <item name="colorSurface">@color/_white</item>
    </style>

    <!-- Theme for details activity -->
    <style name="Theme.MindShaper.Details" parent="Theme.MindShaper">
        <item name="android:windowBackground">@color/_white</item>
        <item name="colorSurface">@color/_orange_light</item>
    </style>

</resources>