<?xml version="1.0" encoding="utf-8"?>
<resources>

<!-- ====================================== -->
<!--    TEXT VIEW -->
<!-- ====================================== -->

    <!-- Activity / Header -->
    <style name="TextView_Header_Activity">
        <item name="android:fontFamily">@font/alegreya_regular</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Activity / Section -->
    <style name="TextView_Header_Section">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Activity / Text Standard -->
    <style name="TextView_Standard">
        <item name="android:fontFamily">@font/alegreya_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Activity / Text Standard / Thread -->
    <style name="TextView_Standard_Thread">
        <item name="android:fontFamily">@font/alegreya_regular</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Details -> Metadata (Project, Soul) -->
    <style name="TextView_Metadata">
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextView_Info_Extras">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextView_Info_Success">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/validation_success</item>
    </style>

    <style name="TextView_Info_Error">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/validation_error</item>
    </style>

<!-- ====================================== -->
<!--    EDIT TEXT -->
<!-- ====================================== -->

    <style name="EditText_Hint">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

<!-- ====================================== -->
<!--    BUTTONS -->
<!-- ====================================== -->

    <!-- To remove default padding for Material Button-->
    <style name="HexContentButton.Used" parent="Widget.MaterialComponents.Button">
        <!-- Min constraints -->
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

        <!-- Insets -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>

        <!-- Padding -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="iconPadding">0dp</item>

        <!-- Colors -->
        <item name="iconTint">@color/button_icon_used_fill</item>
        <item name="backgroundTint">@color/button_used_background</item>

        <!-- Corners -->
        <item name="cornerRadius">8dp</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary_darkmode</item>
    </style>

    <style name="HexContentButton.NotUsed" parent="Widget.MaterialComponents.Button">
        <!-- Min constraints -->
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

        <!-- Insets -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>

        <!-- Padding -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="iconPadding">0dp</item>

        <!-- Colors -->
        <item name="iconTint">@color/button_icon_not_used_fill</item>
        <item name="backgroundTint">@color/button_not_used_background</item>

        <!-- Corners -->
        <item name="cornerRadius">8dp</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary_darkmode</item>
    </style>

    <!-- ====================================== -->
    <!--    DIALOGS -->
    <!-- ====================================== -->

    <style name="DialogTile">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_background</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="DialogItemText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
    </style>

<!-- ====================================== -->
<!--    IMAGE VIEW -->
<!-- ====================================== -->

    <!-- Icons -->
    <style name="ImageView_Icon">
        <item name="tint">@color/_gray_mid</item>
    </style>

</resources>