<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TEXT VIEW -->
    <style name="TextView_Header_Activity">
        <item name="android:fontFamily">@font/alegreya_regular</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextView_Header">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextView_Body">
        <item name="android:fontFamily">@font/alegreya_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextView_Info">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextView_Error">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/error_red</item>
    </style>

    <!-- EDIT TEXT -->
    <style name="EditText_Hint">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

</resources>