<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TEXT VIEW -->
    <style name="TextView_Header_Activity">
        <item name="android:fontFamily">@font/alegreya_regular</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextView_Header_Section">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextView_Body_Highlighted">
        <item name="android:fontFamily">@font/alegreya_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextView_Body_Standard">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextView_Info_Extras">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextView_Info_Success">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/validation_success</item>
    </style>

    <style name="TextView_Info_Error">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/validation_error</item>
    </style>

    <!-- EDIT TEXT -->
    <style name="EditText_Hint">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="SeparatorOrDecorator">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- To remove default padding for Material Button-->
    <style name="App.MaterialButton.Flat" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>