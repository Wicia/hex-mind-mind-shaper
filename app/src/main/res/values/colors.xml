<?xml version="1.0" encoding="utf-8"?>
<resources>

<!-- ====================================== -->
<!--    CORE PALETTE -->
<!-- ====================================== -->

    <!-- ORANGE: Main orange color for the app theme -->
    <color name="_orange_light">#FFF4E6</color>
    <color name="_orange_soft">#FFDFBF</color>
    <color name="_orange_medium">#FFCA98</color>
    <color name="_orange_grim">#FFB470</color>
    <color name="_orange_dark">#FF9F49</color>

    <!-- NEUTRAL: Grayscale for text and backgrounds -->
    <color name="_white">#FFFFFF</color>
    <color name="_gray_light">#D3D3D3</color>
    <color name="_gray_mid">#666666</color>
    <color name="_gray_dark">#333333</color>
    <color name="_black">#000000</color>

<!-- ====================================== -->
<!--    SEMANTIC COLORS -->
<!-- ====================================== -->

    <!-- Success, error, warning states -->
    <color name="validation_success">@color/_gray_mid</color>
    <color name="validation_error">#480808</color>
    <color name="info_blue">#1976D2</color>

<!-- ====================================== -->
<!--    APP THEME MAPPINGS -->
<!-- ====================================== -->

    <color name="app_primary">@color/_orange_dark</color>
    <color name="app_primary_variant">@color/_orange_dark</color>

    <color name="app_secondary">@color/_orange_dark</color>
    <color name="app_secondary_variant">@color/_orange_dark</color>

    <color name="app_background">@color/_orange_light</color>
    <color name="app_surface">@color/_white</color>

<!-- ====================================== -->
<!--    TEXT COLORS -->
<!-- ====================================== -->

    <!-- Content -->
    <color name="text_primary">@color/_gray_dark</color>
    <color name="text_secondary">@color/_gray_mid</color>
    <color name="text_secondary_darkmode">@color/_gray_light</color>

    <color name="text_on_primary">@color/_white</color>
    <color name="text_on_secondary">@color/_white</color>

    <!-- Bullet points -->
    <color name="text_bullet_point">@color/_gray_mid</color>

<!-- ====================================== -->
<!--    WIDGET COLORS -->
<!-- ====================================== -->

    <!-- Input controls -->
    <color name="input_background">@color/_white</color>
    <color name="input_stroke">@color/app_background</color>
    <color name="input_focused">@color/_orange_dark</color>

<!-- ====================================== -->
<!--    BUTTONS -->
<!-- ====================================== -->

    <!-- Background colors -->
    <color name="button_primary">@color/_orange_dark</color>
    <color name="button_secondary">@color/_orange_medium</color>

    <!-- Background colors / States -->
    <color name="button_not_used_background">@color/_orange_soft</color>
    <color name="button_used_background">@color/_orange_medium</color>
    <color name="button_disabled_background">@color/_gray_mid</color>

    <!-- Button icons -->
    <color name="button_icon_fill">@color/_orange_medium</color>

    <color name="button_icon_not_used_fill">@color/_orange_medium</color>
    <color name="button_icon_used_fill">@color/_gray_mid</color>

    <color name="button_icon_disabled_fill">@color/_gray_light</color>

<!-- ====================================== -->
<!--    CARD VIEWS -->
<!-- ====================================== -->

    <!-- Card views -->
    <color name="card_view_background">@color/_orange_medium</color>
    <color name="card_background">@color/_white</color>

    <!-- Separator / dividers -->
    <color name="separator_background">@color/_orange_dark</color>

</resources>