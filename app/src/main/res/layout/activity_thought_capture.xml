<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            style="@style/TextView_Header_Activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/capture_main_label"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <!-- Short Thought Section (Always visible) -->
        <EditText
            style="@style/EditText_Hint"
            android:id="@+id/editThoughtEssence"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/shape_edit_text"
            android:hint="@string/capture_essence_tooltip"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:padding="12dp" />

        <TextView
            android:id="@+id/tvWordCount"
            style="@style/TextView_Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/capture_essence_state_initial"
            android:gravity="end"
            android:layout_marginBottom="24dp" />

        <!-- Rich Text Section (Visible when MODE_RICH_TEXT) -->
        <LinearLayout
            android:id="@+id/notesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/TextView_Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capture_note_label"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/richNotes"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:padding="12dp"
                android:background="@drawable/shape_edit_text"
                android:layout_marginBottom="24dp"
                />

        </LinearLayout>

        <!-- Voice Recording Section (Visible when MODE_VOICE) -->
        <LinearLayout
            android:id="@+id/voiceRecordingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                style="@style/TextView_Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capture_voice_header"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecordNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="@string/capture_voice_record_new"
                    android:backgroundTint="@color/button_primary"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_thought_type_sound"
                    app:iconGravity="textStart"
                    app:iconSize="32dp"
                    app:iconTint="@color/button_icon_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecordStopNPlay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="@string/capture_voice_record_stop"
                    android:backgroundTint="@color/button_primary"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_stop_circle"
                    app:iconGravity="textStart"
                    app:iconSize="32dp"
                    app:iconTint="@color/button_icon_primary" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvRecordingStatus"
                style="@style/TextView_Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capture_voice_tooltip"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@string/common_btn_save'
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/button_primary"
            app:cornerRadius="8dp"/>

    </LinearLayout>

</ScrollView>