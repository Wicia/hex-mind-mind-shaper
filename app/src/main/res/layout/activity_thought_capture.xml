<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/common_placeholder_accessibility_content_desc"
            app:srcCompat="@drawable/ic_phase_gathering" />

        <TextView
            style="@style/TextView_Header_Activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/capture_main_label"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Short Thought Section (Always visible) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="#FFAF7A"
            app:hintTextColor="#FF8C42"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_essence"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edit_text"
                android:hint="@string/capture_essence_tooltip"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:padding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_essence_words_info"
            style="@style/TextView_Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/capture_essence_state_initial"
            android:gravity="end"
            android:layout_marginBottom="24dp" />

        <FrameLayout
            android:id="@+id/fl_container_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@string/common_btn_save'
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/button_primary"
            app:cornerRadius="8dp"/>

    </LinearLayout>

</ScrollView>