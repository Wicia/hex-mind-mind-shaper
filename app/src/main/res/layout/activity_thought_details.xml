<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    android:padding="4dp">

    <!-- First row: IMAGE and TEXT FIELD -->

    <!-- Second row: TEXT FIELD, TEXT FIELD 1 + TEXT FIELD 2, IMAGE -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/valueTile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:layout_marginEnd="4dp"
            android:background="@drawable/shape_clickable_background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/valueImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:paddingTop="6dp"
                android:src="@drawable/ic_value_4" />

            <TextView
                android:id="@+id/valueText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="Chwila uniesienia"
                android:textAlignment="center"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/essenceAndMetadataTile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/essenceText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1.8"
                android:background="@drawable/shape_clickable_background"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:text="Najprościej rozbroić śmiechem u ludzi emocjonalną broń którą używają na co dzień"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/areaText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/shape_clickable_background"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text="Ważne idee \u000A Umysł i Serce"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/emotionIcon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@drawable/shape_clickable_background"
                    android:scaleType="centerInside"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:src="@drawable/ic_emotion_joy" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Third row: SOUND and DRAWING -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <!-- Sound button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/soundButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:backgroundTint="@color/common_orange_mid"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_thought_type_sound"
            app:iconGravity="textStart"
            app:iconSize="64dp"
            app:iconTint="@color/orange_light" />

        <!-- Drawing button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawingButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:backgroundTint="@color/common_orange_mid"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_thought_type_drawing"
            app:iconGravity="textStart"
            app:iconSize="64dp"
            app:iconTint="@color/orange_light" />

    </LinearLayout>

    <!-- Fourth row: NOTE -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/noteButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="16sp"
        app:backgroundTint="@color/common_orange_mid"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_thought_type_note"
        app:iconGravity="textStart"
        app:iconSize="64dp"
        app:iconTint="@color/orange_light" />

    <!-- Fifth row: PHOTO -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/photoButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="16sp"
        app:backgroundTint="@color/common_orange_mid"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_thought_type_photo"
        app:iconGravity="textStart"
        app:iconSize="64dp"
        app:iconTint="@color/orange_light" />

</LinearLayout>