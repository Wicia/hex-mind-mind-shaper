<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ESSENCE -->
    <TextView
        android:id="@+id/tv_essence"
        style="@style/TextView_Body_Highlighted"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_button"
        android:gravity="center_vertical"
        android:padding="24dp" />

    <!-- DOMAIN + THREAD -->
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_icon_domain"
            style="@style/App.MaterialButton.Flat"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.2"
            app:backgroundTint="@color/button_secondary"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_domain_none"
            app:iconGravity="textStart"
            app:iconSize="48dp"
            app:iconTint="@color/button_icon_placeholder" />

        <TextView
            android:id="@+id/tv_thread"
            style="@style/TextView_Body_Standard"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.5"
            android:background="@drawable/shape_button"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:padding="24dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_thread_placeholder"
            style="@style/App.MaterialButton.Flat"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.5"
            android:layout_marginStart="8dp"
            app:backgroundTint="@color/button_secondary"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_thread"
            app:iconGravity="textStart"
            app:iconSize="48dp"
            app:iconTint="@color/button_icon_placeholder" />


    </LinearLayout>

    <!-- NOTE + DRAWING -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rich_text"
            style="@style/TextView_Body_Standard"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_weight="0.5"
            android:background="@drawable/shape_button"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:padding="24dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rich_text_placeholder"
            style="@style/App.MaterialButton.Flat"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_weight="0.5"
            app:backgroundTint="@color/button_secondary"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_thought_type_rich_text"
            app:iconGravity="textStart"
            app:iconSize="48dp"
            app:iconTint="@color/button_icon_placeholder" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_drawing_placeholder"
            style="@style/App.MaterialButton.Flat"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.5"
            app:backgroundTint="@color/button_secondary"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_thought_type_drawing"
            app:iconGravity="textStart"
            app:iconSize="48dp"
            app:iconTint="@color/button_icon_placeholder" />
    </LinearLayout>

    <!-- SOUND RECORDING -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_recording_placeholder"
        style="@style/App.MaterialButton.Flat"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        app:backgroundTint="@color/button_secondary"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_thought_type_recording"
        app:iconGravity="textStart"
        app:iconSize="48dp"
        app:iconTint="@color/button_icon_placeholder" />

    <!-- PHOTO -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_photo_placeholder"
        style="@style/App.MaterialButton.Flat"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textSize="16sp"
        app:backgroundTint="@color/button_secondary"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_thought_type_photo"
        app:iconGravity="textStart"
        app:iconSize="48dp"
        app:iconTint="@color/button_icon_placeholder" />

</LinearLayout>
