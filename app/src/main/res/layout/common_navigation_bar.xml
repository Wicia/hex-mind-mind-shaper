<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigationBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/nav_bar"
    android:padding="12dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:gravity="center_horizontal">

    <!-- Toggle button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToggle"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:background="@drawable/nav_menu"
        app:icon="@drawable/ic_nav_expand"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="28dp"
        app:iconTint="@color/_orange_3_mid"
        app:rippleColor="@color/_orange_3_mid"
        app:backgroundTint="@null"/>

    <!-- Container for navigation buttons -->
    <LinearLayout
        android:id="@+id/navButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Button 1: Home -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navHome"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:contentDescription="Home"
            app:icon="@drawable/ic_header_home"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="28dp"
            app:iconTint="@color/_orange_3_mid"
            app:cornerRadius="12dp"
            app:strokeWidth="0.5dp"
            app:strokeColor="@color/_orange_2_soft"
            app:backgroundTint="@color/app_background"
            app:rippleColor="@color/_orange_3_mid"/>

        <!-- Button 2: Carousel -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navCarousel"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:contentDescription="Carousel"
            app:icon="@drawable/ic_header_carousel"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="28dp"
            app:iconTint="@color/_orange_3_mid"
            app:cornerRadius="12dp"
            app:strokeWidth="0.5dp"
            app:strokeColor="@color/_orange_2_soft"
            app:backgroundTint="@color/app_background"
            app:rippleColor="@color/_orange_3_mid"/>

        <!-- Button 3: Settings -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navSettings"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:contentDescription="Settings"
            app:icon="@drawable/ic_header_settings"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="28dp"
            app:iconTint="@color/_orange_3_mid"
            app:cornerRadius="12dp"
            app:strokeWidth="0.5dp"
            app:strokeColor="@color/_orange_2_soft"
            app:backgroundTint="@color/app_background"
            app:rippleColor="@color/_orange_3_mid"/>

    </LinearLayout>

</LinearLayout>