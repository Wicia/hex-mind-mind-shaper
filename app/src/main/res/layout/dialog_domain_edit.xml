<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/domain_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/settings_domains_domain_name"
        app:boxStrokeColor="#FF8C42"
        app:hintTextColor="#FFAF7A">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_domain_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="#FFCDA0" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Loading indicator -->
    <TextView
        android:id="@+id/tv_domain_name_validation_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="" />

    <ProgressBar
        android:id="@+id/loading_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:indeterminateTint="#FFAF7A" />

    <!-- Icons grid with optimal height for 3 columns -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/icons_recycler"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:visibility="gone"
        android:scrollbars="vertical" />

</LinearLayout>