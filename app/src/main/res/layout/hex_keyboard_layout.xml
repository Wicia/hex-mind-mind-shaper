<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#3d2817"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- * # @ & -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#2d1f12"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <Button
            android:id="@+id/btn_star"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="*"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/hex_keyboard_special_key_background"/>

        <Button
            android:id="@+id/btn_hash"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="#"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/hex_keyboard_special_key_background"/>

        <Button
            android:id="@+id/btn_at"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="\@"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/hex_keyboard_special_key_background"/>

        <Button
            android:id="@+id/btn_ampersand"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="&amp;"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/hex_keyboard_special_key_background"/>

        <Button
            android:id="@+id/btn_quotation_mark"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="\?"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/hex_keyboard_special_key_background"/>

        <Button
            android:id="@+id/btn_exclamation_mark"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="!"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/hex_keyboard_special_key_background"/>
    </LinearLayout>

    <!-- Row 1: q w e r t y u i o p -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="4dp">

        <Button android:id="@+id/key_q" style="@style/HexKeyboard_StandardKey" android:text="q"/>
        <Button android:id="@+id/key_w" style="@style/HexKeyboard_StandardKey" android:text="w"/>
        <Button android:id="@+id/key_e" style="@style/HexKeyboard_StandardKey" android:text="e"/>
        <Button android:id="@+id/key_r" style="@style/HexKeyboard_StandardKey" android:text="r"/>
        <Button android:id="@+id/key_t" style="@style/HexKeyboard_StandardKey" android:text="t"/>
        <Button android:id="@+id/key_y" style="@style/HexKeyboard_StandardKey" android:text="y"/>
        <Button android:id="@+id/key_u" style="@style/HexKeyboard_StandardKey" android:text="u"/>
        <Button android:id="@+id/key_i" style="@style/HexKeyboard_StandardKey" android:text="i"/>
        <Button android:id="@+id/key_o" style="@style/HexKeyboard_StandardKey" android:text="o"/>
        <Button android:id="@+id/key_p" style="@style/HexKeyboard_StandardKey" android:text="p"/>
    </LinearLayout>

    <!-- Row 2: a s d f g h j k l -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="2dp">

        <Button android:id="@+id/key_a" style="@style/HexKeyboard_StandardKey" android:text="a"/>
        <Button android:id="@+id/key_s" style="@style/HexKeyboard_StandardKey" android:text="s"/>
        <Button android:id="@+id/key_d" style="@style/HexKeyboard_StandardKey" android:text="d"/>
        <Button android:id="@+id/key_f" style="@style/HexKeyboard_StandardKey" android:text="f"/>
        <Button android:id="@+id/key_g" style="@style/HexKeyboard_StandardKey" android:text="g"/>
        <Button android:id="@+id/key_h" style="@style/HexKeyboard_StandardKey" android:text="h"/>
        <Button android:id="@+id/key_j" style="@style/HexKeyboard_StandardKey" android:text="j"/>
        <Button android:id="@+id/key_k" style="@style/HexKeyboard_StandardKey" android:text="k"/>
        <Button android:id="@+id/key_l" style="@style/HexKeyboard_StandardKey" android:text="l"/>
    </LinearLayout>

    <!-- Row 3: Shift z x c v b n m Backspace -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="2dp">

        <Button
            android:id="@+id/key_shift"
            style="@style/HexKeyboard_FunctionKey"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text="ðŸš€"
            android:textSize="24sp"/>

        <Button android:id="@+id/key_z" style="@style/HexKeyboard_StandardKey" android:text="z"/>
        <Button android:id="@+id/key_x" style="@style/HexKeyboard_StandardKey" android:text="x"/>
        <Button android:id="@+id/key_c" style="@style/HexKeyboard_StandardKey" android:text="c"/>
        <Button android:id="@+id/key_v" style="@style/HexKeyboard_StandardKey" android:text="v"/>
        <Button android:id="@+id/key_b" style="@style/HexKeyboard_StandardKey" android:text="b"/>
        <Button android:id="@+id/key_n" style="@style/HexKeyboard_StandardKey" android:text="n"/>
        <Button android:id="@+id/key_m" style="@style/HexKeyboard_StandardKey" android:text="m"/>

        <Button
            android:id="@+id/key_backspace"
            style="@style/HexKeyboard_FunctionKey"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text="ðŸª“"
            android:textSize="24sp"/>
    </LinearLayout>

    <!-- Row 4: 123 , Space . Enter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <Button
            android:id="@+id/key_numbers"
            style="@style/HexKeyboard_FunctionKey"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:text="123"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/key_comma"
            style="@style/HexKeyboard_StandardKey"
            android:text=","/>

        <Button
            android:id="@+id/key_space"
            style="@style/HexKeyboard_StandardKey"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:text=""/>

        <Button
            android:id="@+id/key_period"
            style="@style/HexKeyboard_StandardKey"
            android:text="."/>

        <Button
            android:id="@+id/key_enter"
            style="@style/HexKeyboard_FunctionKey"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:text="â†µ"
            android:textSize="24sp"/>
    </LinearLayout>

</LinearLayout>