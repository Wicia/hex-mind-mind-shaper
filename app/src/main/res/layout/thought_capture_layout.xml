<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_new_thought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:src="@drawable/flare_24px"
        app:backgroundTint="@color/fab_new_thought_color" />

    <!-- Menu FABs -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_note_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:src="@drawable/contract_24px"
        app:backgroundTint="@color/fab_note_color"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_voice_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:src="@drawable/record_voice_over_24px"
        app:backgroundTint="@color/fab_voice_color" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_drawing_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:src="@drawable/draw_24px"
        app:backgroundTint="@color/fab_drawing_color" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_photo_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:src="@drawable/photo_camera_24px"
        app:backgroundTint="@color/fab_photo_color" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>