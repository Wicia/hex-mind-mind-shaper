<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_columnWeight="1"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/domain_button_selector"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_domain_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        app:tint="@color/_black"
        android:contentDescription="@string/common_placeholder_accessibility_content_desc" />

    <TextView
        android:id="@+id/tv_domain_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_primary"
        android:textAlignment="center"
        android:maxLines="2"
        android:padding="8dp"/>

</LinearLayout>