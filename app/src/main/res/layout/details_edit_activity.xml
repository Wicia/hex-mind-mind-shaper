<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- DOMAIN + THREAD -->
            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:baselineAligned="false">

                <!-- DOMAIN -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_domain_icon_placeholder"
                    style="@style/App.MaterialButton.Flat.NotUsed"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.25"
                    android:layout_marginStart="32dp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_domain_none"
                    app:iconGravity="textStart"
                    app:iconSize="48dp"
                    />

                <!-- TODO: Introduce style -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_domain_icon"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.25"
                    android:layout_marginStart="32dp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconSize="48dp"
                    app:iconPadding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="6dp"
                    android:visibility="gone" />

                <!-- THREAD: With content -->
                <TextView
                    android:id="@+id/tv_thread"
                    style="@style/TextView_Info_Extras"
                    android:layout_gravity="top"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0.75"
                    android:background="@drawable/shape_button"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:padding="12dp"
                    />

                <!-- THREAD: Empty / To be specified -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_thread_placeholder"
                    style="@style/App.MaterialButton.Flat.NotUsed"
                    android:layout_gravity="top"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0.75"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_thread"
                    app:iconGravity="textStart"
                    app:iconSize="48dp" />

            </LinearLayout>

            <View
                android:id="@+id/tv_phase_info_separator"
                android:background="@color/separator_background"
                android:layout_width="48dp"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center" />

            <!-- =============================== -->
            <!-- THOUGHT REPRESENTATIONS SECTION -->
            <!-- =============================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <!-- RICH TEXT NOTE -->
                <TextView
                    android:id="@+id/tv_rich_text"
                    style="@style/TextView_Body_Standard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/shape_button"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:layout_marginEnd="32dp"
                    android:padding="20dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_rich_text_placeholder"
                    style="@style/App.MaterialButton.Flat.NotUsed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dp"
                    android:layout_marginBottom="8dp"
                    android:padding="20dp"
                    android:layout_marginEnd="32dp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_thought_type_rich_text"
                    app:iconGravity="textStart"
                    app:iconSize="48dp"
                    />

                <!-- DRAWING -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_drawing_placeholder"
                    style="@style/App.MaterialButton.Flat.NotUsed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="8dp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_thought_type_drawing"
                    app:iconGravity="textStart"
                    app:iconSize="48dp"
                    />

                <!-- SOUND RECORDING -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_recording_placeholder"
                    style="@style/App.MaterialButton.Flat.NotUsed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="32dp"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_thought_type_recording"
                    app:iconGravity="textStart"
                    app:iconSize="48dp"
                    />

                <!-- PHOTO -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_photo_placeholder"
                    style="@style/App.MaterialButton.Flat.NotUsed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dp"
                    android:textSize="16sp"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="8dp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_thought_type_photo"
                    app:iconGravity="textStart"
                    app:iconSize="48dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- SAVE (hiding on scrolling) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_save"
        android:contentDescription="@string/common_placeholder_accessibility_content_desc"
        app:backgroundTint="@color/button_primary"
        app:fabSize="normal"
        app:maxImageSize="32dp"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
