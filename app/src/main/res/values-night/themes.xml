<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for dark mode -->
    <style name="Theme.FastNote" parent="Theme.Material3.Dark">

        <!-- Primary colors -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/orange_extra_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/app_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/orange_extra_dark</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/app_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/input_background</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:windowBackground">@color/app_background</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/black</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>

    </style>

</resources>