<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for dark mode -->
    <style name="Theme.FastNote" parent="Theme.Material3.Dark">

        <!-- Primary color -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/_orange_extra_dark</item>
        <item name="colorOnPrimaryContainer">@color/_white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/app_secondary</item>
        <item name="colorOnSecondary">@color/_black</item>
        <item name="colorSecondaryContainer">@color/_orange_extra_dark</item>
        <item name="colorOnSecondaryContainer">@color/_white</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/app_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/input_background</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:windowBackground">@color/app_background</item>

        <!-- Error color -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/_black</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>

    </style>

</resources>